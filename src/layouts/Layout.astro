---
import Footer from '../components/Footer.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ImageTypeToggle from '../components/ImageTypeToggle.astro';
import { getCurrentImageType } from '../utils/imageType';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const currentImageType = getCurrentImageType();
---

<!doctype html>
<html lang="ja" data-theme="light" data-image-type={currentImageType}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="noindex, nofollow">
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-base-100">
		<header class="container mx-auto px-4 py-4 flex justify-end gap-2">
			<ImageTypeToggle />
			<ThemeToggle />
		</header>
		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>
		<Footer />
	</body>
</html>