---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PatternImages from '../components/PatternImages.astro';

const articles = await getCollection('articles');
// IDの数字部分でソート
const sortedArticles = articles.sort((a, b) => {
  const aNum = Number.parseInt(a.id.replace('content-', '').replace('.md', ''));
  const bNum = Number.parseInt(b.id.replace('content-', '').replace('.md', ''));
  return aNum - bNum;
});
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>Welcome to <span class="text-gradient">Astro</span></h1>
    <p class="instructions">
      To get started, open the directory <code class="astro-code">src/pages/</code> in your project.<br />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" heading above.
    </p>

    <ul class="link-card-grid">
      {articles.map((article) => (
        <li class="link-card">
          <h2>
            <a href={`/${article.id.replace('.md', '')}`}>
              {article.data.title}
            </a>
          </h2>
          <p>{article.data.description}</p>
          <PatternImages baseName={article.id.replace('.md', '')} title={article.data.title} />
        </li>
      ))}
    </ul>
  </main>
</Layout>
