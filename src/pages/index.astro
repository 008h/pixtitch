---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PatternImages from '../components/PatternImages.astro';
import Header from '../components/Header.astro'

const articles = await getCollection('articles');
// IDの数字部分でソート
const sortedArticles = articles.sort((a, b) => {
  const aNum = Number.parseInt(a.id.replace('content-', '').replace('.md', ''));
  const bNum = Number.parseInt(b.id.replace('content-', '').replace('.md', ''));
  return aNum - bNum;
});
---

<Layout title="Pixtitch">

  <Header showDescription />
  <main>
    <ol>
      {articles.map((article) => (
        <li>
            <a href={`/${article.id.replace('.md', '')}`}>
              <PatternImages baseName={article.id.replace('.md', '')} title={article.data.title} enableSwitching={false} />
            </a>
        </li>
      ))}
    </ol>
  </main>
</Layout>
