---
import ImageTypeToggle from './ImageTypeToggle.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  showDescription?: boolean;
  title?: string;
}

const { showDescription = false, title } = Astro.props;
---

<header class="sticky top-0 border-base-300">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <div>
        <h1>
          <a href={`${import.meta.env.BASE_URL}`} class="text-xl font-bold text-base-content hover:text-base-content/80 transition-colors">
            Pixtitch
          </a>
        </h1>
        {title && (
          <h2 class="text-lg font-medium text-base-content/70">
            {title}
          </h2>
        )}
      </div>
      {showDescription && (
        <p class="text-base-content/70">
          pixtitch is an ongoing project by Hiroshi Ohba, exploring the intersection of pixel art and embroidery.
        </p>
      )}
      <ThemeToggle />
    </div>
</header>