---
import ImageTypeToggle from './ImageTypeToggle.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  showDescription?: boolean;
  title?: string;
}

const { showDescription = false, title } = Astro.props;
---

<header class="sticky top-0">
    <div>
      <h1>
        <a href=`${import.meta.env.BASE_URL}` class="text-xl font-bold text-gray-800 hover:text-gray-600">
          Pixtitch
        </a>
      </h1>
      {title && (
        <h2 class="text-lg font-medium text-gray-600">
          {title}
        </h2>
      )}
    </div>
    {showDescription && (
      <p>
        pixtitch is an ongoing project by Hiroshi Ohba, exploring the intersection of pixel art and embroidery.
      </p>
    )}

			<div class="flex gap-2">
				<ImageTypeToggle />
				<ThemeToggle />
			</div>
</header>